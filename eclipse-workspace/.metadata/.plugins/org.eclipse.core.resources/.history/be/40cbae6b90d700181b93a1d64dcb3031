import java.util.Random ;
import java.util.Scanner ;
public class HighLow {

	public static void main(String[] args) {
	
		Random generator = new Random() ;
		boolean finished = true ;
		int count = 0 ;
		for (count = 0 ; count < 5 ; ++count )
		{
		do 
		{
			int randomCard = generator.nextInt(13) + 1 ; 
			Scanner scan = new Scanner(System.in) ;
			System.out.println("The card is a " + randomCard) ;
			System.out.println("\nDo you think the next card will be higher, lower or equal? : ") ;
			int newRandomCard = generator.nextInt(13) + 1 ; 
			if (scan.hasNext("higher")) 
			{
				if (newRandomCard >= randomCard) 
				{
				//	count += 1 ;
					System.out.println("Correct") ;
				}
				else
				{
					System.out.println("Incorrect, the next card was " + newRandomCard + " Lets try again.") ;
					count = 0 ;
				}
			}
			
			else if (scan.hasNext("lower")) 
			{
				if (newRandomCard <= randomCard) 
				{
	//				count += 1 ;
					System.out.println("Correct") ;
				}
				else
				{
					System.out.println("Incorrect, the next card was " + newRandomCard + " Lets try again.") ;
					count = 0 ;
				}
			}
			
			else if (scan.hasNext("equal")) 
			{
				if (newRandomCard == randomCard) 
				{
				//	count += 1 ;
					System.out.println("Correct") ;
				}
				else
				{
					System.out.println("Incorrect, the next card was " + newRandomCard + " Lets try again.") ;
					count = 0 ;
				}
			}
			
			else
			{
				System.out.print("That was an invalid answer please restart") ;
				count = 0 ;
			}
			if (count == 4)
			{
				System.out.print("Congratulationsyou got them all correct.") ;
				finished = false ;
			}
		}
		while(!finished) ;
		}
		
		
		
		
		
		
		
		
		
		
		
	}

}
